set $mod Mod4
set $left h
set $down j
set $up k
set $right l
set $term alacritty
set $menu swaymsg exec 'wofi --show drun --no-actions --width 320 --height 320'

output * bg /usr/share/backgrounds/sway/Sway_Wallpaper_Blue_1920x1080.png fill

