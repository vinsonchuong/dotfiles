gitcl() {
  git clone --recursive $@ || exit
  if [[ ${*[-1]##*.} -eq git ]]
  then
    pushd ${${*[-1]##*/}%*.git} 1>/dev/null
  else
    pushd $*[-1] 1>/dev/null
  fi
  for branch in $(git branch -r | grep -v HEAD)
  do
    git branch --track ${branch##*/} $branch 2>/dev/null
  done
  popd 1>/dev/null
}

local gpg_env_file="$HOME/.gnupg/gpg-agent.env"
if pgrep -u $USER gpg-agent &>/dev/null
then
  eval $(cat $gpg_env_file)
  eval $(cut -d= -f1 $gpg_env_file | xargs echo export)
else
  eval $(gpg-agent --daemon --enable-ssh-support --write-env-file $gpg_env_file 2>/dev/null)
  chmod 600 $gpg_env_file
fi
export GPG_TTY="$(tty)"
