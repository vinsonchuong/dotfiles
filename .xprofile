urxvtd -q -o -f

pactl unload-module module-alsa-card

pactl load-module module-alsa-sink sink_name=laptop device=hw:0,0
pactl load-module module-alsa-sink sink_name=hdmi device=hw:0,3
pactl load-module module-alsa-sink sink_name=thunderbolt device=hw:0,7
pactl load-module module-combine-sink sink_name=all slaves=laptop,hdmi,thunderbolt
pactl set-default-sink laptop

pactl load-module module-alsa-source name=laptop device=hw:0,0
pactl set-default-source alsa_input.monitor

amixer -c PCH sset Headphone 100%

"$(ruby -e 'puts Gem.user_dir')/bin/gemstash" start
